<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_corona_view_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:elevation="10dp"
    android:orientation="horizontal"
    android:layout_margin="5dp"
    android:weightSum="8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="3dp"
        android:background="@color/white"
        android:padding="8dp">

        <TextView
            android:id="@+id/txt_country"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="start"
            android:padding="4dp"
            android:paddingStart="8dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Region"
            android:textColor="@color/colorBlack" />

        <TextView
            android:id="@+id/txt_death"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:drawableStart="@drawable/circle_red"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:paddingStart="15dp"
            android:text="32,222"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_cases"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:drawableStart="@drawable/circle"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="32,222"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/txt_recover"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:drawableStart="@drawable/circle_green"
            android:drawableEnd="@drawable/ic_keyboard_arrow_down_black_24dp"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="32,222"
            android:textColor="@color/black" />
    </LinearLayout>

</androidx.cardview.widget.CardView>