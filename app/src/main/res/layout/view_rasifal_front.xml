<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/img_rasi_short"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="2dp"
        android:layout_marginBottom="7dp"
        android:background="@drawable/gemini" />
    <TextView
        android:id="@+id/txt_rasifal_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_rasi_short"
        android:layout_alignTop="@+id/img_rasi_short"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:paddingEnd="5dp"
        android:text="Methon"
        android:textColor="@color/black"
        android:textSize="16sp"
 />

    <TextView
        android:id="@+id/txt_rasi_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txt_rasifal_title"
        android:gravity="center"
        android:layout_toEndOf="@+id/txt_rasifal_title"
        android:maxLines="2"
        android:text="Please click Update" />
</RelativeLayout>