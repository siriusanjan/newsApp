<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_gold_silver"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="2dp"
    android:background="@drawable/bottom_sheet_style"
    android:orientation="vertical"
    app:cardCornerRadius="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">


    <TextView
        android:id="@+id/txt_title_Country_Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_toEndOf="@+id/img_gold_close"
        android:drawableStart="@drawable/ic_close_black_24dp"
        android:padding="2dp"
        android:text="China"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="20sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_gravity="center">
    <com.google.android.gms.ads.AdView xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/ad_corona_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date"
        ads:adSize="BANNER"
        ads:adUnitId="@string/banner_real_ads" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitish"
        android:orientation="horizontal"
        android:padding="2dp">
        <TextView
            android:id="@+id/txt_death"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/whitish"
            android:gravity="center"
            android:padding="2dp"
            android:text="Total Death"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/txt_death_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whitish"
            android:gravity="end"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:padding="2dp"
            android:text="Death Number"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitish"
        android:orientation="horizontal"
        android:padding="2dp">
        <TextView
            android:id="@+id/txt_cases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:padding="4dp"
            android:text="Total Cases"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/txt_cases_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="end"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"            android:padding="4dp"
            android:text="Cases Number"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitish"
        android:orientation="horizontal"
        android:padding="2dp">
        <TextView
            android:id="@+id/txt_total_recovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/whitish"
            android:gravity="center"
            android:padding="4dp"
            android:text="Recover Till Today"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/txt_total_recovered_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whitish"
            android:gravity="end"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:padding="4dp"
            android:text="Recover"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
    </LinearLayout>


















    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitish"
        android:orientation="horizontal"
        android:padding="2dp">
        <TextView
            android:id="@+id/txt_new_death"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:padding="4dp"
            android:text="New Death"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/txt_new_death_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="end"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:padding="4dp"
            android:text="New Death Number"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitish"
        android:orientation="horizontal"
        android:padding="2dp">
        <TextView
            android:id="@+id/txt_new_cases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/whitish"
            android:gravity="center"
            android:padding="4dp"
            android:text="New Cases"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/txt_new_cases_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/whitish"
            android:gravity="end"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:padding="4dp"
            android:text="New Cases number"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="2dp">
        <TextView
            android:id="@+id/txt_serious_critical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:padding="4dp"
            android:text="Critical Patents"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/txt_total_serious_critical_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="end"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:padding="4dp"
            android:text="serious cases number"
            android:textColor="@color/colorBlack"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_statistic_taken_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="end"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:padding="10dp"
        android:text="Taken Date"
        android:textColor="@color/colorBlack"
        android:textSize="18sp" />
</LinearLayout>